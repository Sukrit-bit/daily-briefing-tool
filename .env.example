# Gemini API (primary LLM provider — get key from Google AI Studio or GCP)
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API (fallback provider — get key from platform.openai.com)
OPENAI_API_KEY=your_openai_api_key_here

# Resend (email delivery — get key from resend.com)
RESEND_API_KEY=your_resend_api_key_here

# Email settings
EMAIL_TO=your.email@example.com
# EMAIL_FROM=Daily Briefing <onboarding@resend.dev>  # Default works for Resend sandbox

# YouTube Data API v3 (optional — enables full channel history discovery)
# Without this key, falls back to RSS + scraping (~15-30 most recent videos)
YOUTUBE_API_KEY=your_youtube_api_key_here

# Database
DATABASE_PATH=./data/briefing.db
